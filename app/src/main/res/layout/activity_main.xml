<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="sfung.buffalo.edu.myapplication.MainActivity"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:id="@+id/vertical_divider"
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true" />


    <LinearLayout
        android:id="@+id/lyftLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_toLeftOf="@id/vertical_divider"
        android:background="@color/Lyft"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/lyftImageView"
            android:layout_marginTop="10dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/lyft" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/uberLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/vertical_divider"
        android:background="@color/Uber"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/uberImage"
            android:layout_marginTop="8dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:padding="16dp"
            android:src="@drawable/uberpic" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/first"
        android:background="@drawable/circularoutline"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:layout_width="350dp"
        android:layout_height="65dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/lyft"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="5dp"
            android:layout_weight=".31"
            android:text="Lyft"
            android:fontFamily="@font/montserrat"
            android:textAlignment="viewStart"
            android:textColor="@color/Lyft"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/lyftPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_weight=".19"
            android:fontFamily="@font/montserrat"
            android:text="$25.00"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/uberXPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_weight=".19"
            android:fontFamily="@font/montserrat"
            android:text="$25.00"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/uberX"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="7dp"
            android:layout_marginTop="5dp"
            android:layout_weight=".31"
            android:text="UberX"
            android:fontFamily="@font/montserrat"
            android:textAlignment="textEnd"
            android:textColor="@color/Uber"
            android:textSize="25dp" />
</LinearLayout>


    <LinearLayout
        android:id="@+id/second"
        android:background="@drawable/circularoutline"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp"
        android:layout_width="350dp"
        android:layout_height="65dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/lyftPlus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="5dp"
            android:layout_weight=".31"
            android:text="Plus"
            android:fontFamily="@font/montserrat"
            android:textAlignment="viewStart"
            android:textColor="@color/Lyft"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/lyftPlusPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_weight=".19"
            android:fontFamily="@font/montserrat"
            android:text="$25.00"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/uberXLPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_weight=".19"
            android:fontFamily="@font/montserrat"
            android:text="$25.00"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/uberXL"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_weight=".31"
            android:text="UberXL"
            android:fontFamily="@font/montserrat"
            android:textAlignment="textEnd"
            android:textColor="@color/Uber"
            android:textSize="25dp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/third"
        android:background="@drawable/circularoutline"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="240dp"
        android:layout_width="350dp"
        android:layout_height="65dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/lyftPremier"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="5dp"
            android:layout_weight=".31"
            android:text="Premier"
            android:fontFamily="@font/montserrat"
            android:textAlignment="viewStart"
            android:textColor="@color/Lyft"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/lyftPremierPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_weight=".19"
            android:fontFamily="@font/montserrat"
            android:text="$25.00"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/uberSelectPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_weight=".19"
            android:fontFamily="@font/montserrat"
            android:text="$25.00"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/uberSelect"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="7dp"
            android:layout_marginTop="5dp"
            android:layout_weight=".31"
            android:text="SELECT"
            android:fontFamily="@font/montserrat"
            android:textAlignment="textEnd"
            android:textColor="@color/Uber"
            android:textSize="25dp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/fourth"
        android:background="@drawable/circularoutline"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300dp"
        android:layout_width="350dp"
        android:layout_height="65dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/lyftLux"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="5dp"
            android:layout_weight=".31"
            android:text="Lux"
            android:fontFamily="@font/montserrat"
            android:textAlignment="viewStart"
            android:textColor="@color/Lyft"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/lyftLuxPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_weight=".19"
            android:fontFamily="@font/montserrat"
            android:text="$25.00"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/uberBlackPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_weight=".19"
            android:fontFamily="@font/montserrat"
            android:text="$25.00"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/uberBlack"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="7dp"
            android:layout_marginTop="5dp"
            android:layout_weight=".31"
            android:text="BLACK"
            android:fontFamily="@font/montserrat"
            android:textAlignment="textEnd"
            android:textColor="@color/Uber"
            android:textSize="25dp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/fifth"
        android:background="@drawable/circularoutline"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="360dp"
        android:layout_width="350dp"
        android:layout_height="65dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/lyftLuxSUV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="5dp"
            android:layout_weight=".31"
            android:text="Lux SUV"
            android:fontFamily="@font/montserrat"
            android:textAlignment="viewStart"
            android:textColor="@color/Lyft"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/lyftLuxSUVPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_weight=".19"
            android:fontFamily="@font/montserrat"
            android:text="$25.00"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/uberSUVPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_weight=".19"
            android:fontFamily="@font/montserrat"
            android:text="$25.00"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/uberSUV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="7dp"
            android:layout_marginTop="5dp"
            android:layout_weight=".31"
            android:text="SUV"
            android:fontFamily="@font/montserrat"
            android:textAlignment="textEnd"
            android:textColor="@color/Uber"
            android:textSize="25dp" />
    </LinearLayout>

</RelativeLayout>